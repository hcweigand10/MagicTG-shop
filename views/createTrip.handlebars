<div class="registration-form">
        <form>
            <div class="form-icon">
                <span><i class="bi bi-send"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="name" placeholder="Tripname">
            </div>
            <div class="form-group">
                <input type="date" class="form-control item" id="date-arrival"></input>
            </div>
            <div class="form-group">
                <input type="date" class="form-control item" id="date-leaving"></input>
            </div>

            <hr>

            <div id="destinations">
                <div class="form-group">
                    <label for="destination-name">Destination:</label>
                    <input type="text" id="destination-name-1" class="form-control item"></input>

                    <label for="date-arrival">Arrival Date:</label>
                    <input type="date" id="date-arrival-1" class="form-control item"></input>

                    <label for="date-arrival">Departure Date:</label>
                    <input type="date" id="date-leaving-1" class="form-control item"></input>

                    <label for="budget">Budget:</label>
                    <span>$</span>
                    <input type="number" id="budget-1" class="form-control item"></input>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-block create-account" id="additional-destination" type="button">Add Destination</button>
                <button type="button" class="btn btn-block create-account" id="create-trip-button">Create a Trip</button>
            </div>
        </form>
    </div>



