<div class="container">
    <form class="form" id="new-trip-form">
        <div id="main" class="form-group" style="font-size:large">
            <label for="name">Trip Name:</label>
            <input type="text" class="input-lg col-2" id="name"></input>

            <label for="date-arrival">Start Date:</label>
            <input type="date" id="date-arrival"></input>

            <label for="date-leaving">End Date:</label>
            <input type="date" id="date-leaving"></input>
        </div>

        <hr>
        
        <div id="destinations">
            <div class="form-group">
                <label for="destination-name">Destination:</label>
                <input type="text" id="destination-name-1"></input>

                <label for="date-arrival">Start Date:</label>
                <input type="date" id="date-arrival-1"></input>

                <label for="date-leaving">End Date:</label>
                <input type="date" id="date-leaving-1"></input>

                <label for="budget">Budget:</label>
                <span>$</span>
                <input type="number" id="budget-1"></input>
                <span>.00</span>
            </div>
        </div>
        <div style="display: flex;">
            <button class="btn btn-primary" id="additional-destination" type="button">Add Destination</button>
            <button class="btn btn-primary" id="create-trip-button" type="button" style="float: right;">Generate Trip</button>
        </div>
    </form>
</div>
