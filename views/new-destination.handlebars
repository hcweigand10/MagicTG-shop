<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Name</label>
    <input type="text" id="name" class="form-input" />

    <label class="form-label" for="post-title">Date Arrived</label>
    <input type="date" id="date-arrived" class="form-input" />

    <label class="form-label" for="post-title">Date Leaving</label>
    <input type="date" id="date-leaving" class="form-input" />

    <label class="form-label" for="post-title">Budget</label>
    <input type="text" id="budget" class="form-input" />

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/new-destination.js"></script>