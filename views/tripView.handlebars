<div class="container">
  <div class="row">
    <div class="col">
      <div class="jumbotron jumbotron-fluid trip-view-jumbo">
        <div class="container">
          <h1 class="display-2">Stops</h1>
          <p class="lead">Add and edit your dream stops to {{TripData.name}}</p>
          <button class="btn btn-outline-danger"><a href="#chart">View Budget Distribution</a></button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <!-- HTML !-->
      
      <div class=" flex-row justify-center">
        <button class="button-73" role="button"><a href="/dashboard/trip/{{TripData.id}}/new">âž• Add Stop</a></button>
      </div>
          {{#each TripData.Stops}}
            <div class="card">
              <input type="hidden" value="{{budget}}">
              <div class="card-body">
                <h5 class="card-title">{{name}} </h5>
                <p class="card-text">{{start_date}}</p>
                <p class="card-text">{{end_date}}</p>
                <p class="card-text budget" id="budget-price">{{budget}}</p>
                <a href="/dashboard/trip/{{../TripData.id}}/stop/{{id}}" class="btn btn-primary">View/Edit Stop</a>
                <button class='btn delete-stop-button btn-danger' type="click" id="{{id}}" data-trip-id="{{../TripData.id}}">Delete Stop</button>
              </div>
            </div>
          {{/each}}
    </div>
  </div>

  <div id="chart">
    <canvas id="budgetChart"></canvas>
  </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/graph.js"></script>

