<div class="registration-form">
        <form id="new-post-form">
            <div class="form-icon">
                <span><i class="bi bi-calendar-plus" id="trip-icon"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="name" placeholder="Stop Name">
            </div>
            <div class="form-group">
                <input type="date" class="form-control item" id="start-date"></input>
            </div>
            <div class="form-group">
                <input type="date" class="form-control item" id="end-date"></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="budget" placeholder="Budget"></input>
            </div>
            <input type="hidden" id="tripId" class="form-input" value="{{TripId}}" />

            <div class="form-group">
                <button type="submit" class="btn btn-block create-account" id="create-trip-button">Create a New Stop</button>
            </div>
        </form>
    </div>

<script src="/js/newStop.js"></script>