<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <div class="jumbotron jumbotron-fluid trip-view-jumbo">
        <div class="container">
          <h1 class="display-2">Expenditures for {{stop.name}}</h1>
          <div class= 'row'  data-city={{stop.name}}></div>
          <p class="lead">Add and edit your dream Stop!</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col justify-content-center">
      <div class=" flex-row justify-center">
        <button class="button-73" role="button"><a href="/dashboard/trip/{{trip.id}}/stop/{{stop.id}}/new">âž• New Expenditure</a></button>
      </div>
          {{#each expenditure}}
            <div class="card trip-card">
              <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">Event Type: <span>{{event_type}}</span></p>
                <p class="card-text">Price: <span>{{price}}</span></p>
                <button type="click" class="btn btn-primary delete-expenditure" id="{{id}}" data-trip-id="{{../trip.id}}" data-stop-id="{{../stop.id}}">Delete</button>
                {{!-- <a href="/dashboard/trip/{{../TripData.id}}/stop/{{id}}" class="btn btn-primary">Edit Stop</a> --}}
              </div>
            </div>
          {{/each}}
    </div>
  </div>


</div>

<script src="/js/newExpenditure.js"></script>
<script src="/js/weather.js"></script>